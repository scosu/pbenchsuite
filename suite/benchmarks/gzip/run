#!/usr/bin/python3

import time
import subprocess
import os
import json

cmd = ['gzip', '-c', 'testfile']

data = {}

gzip = open('tmp/testfile.gz', 'w')

start = time.time()
p = subprocess.Popen(cmd, stdout=gzip)
stdo, stde = p.communicate()
end = time.time()
data['compress'] = {'value': end - start, 'unit': 's', 'description': 'Runtime'}

gzip.close()

os.chdir('tmp')

cmd = ['gzip', '-d', 'testfile.gz']
start = time.time()
p = subprocess.Popen(cmd)
stdo, stde = p.communicate()
end = time.time()
data['decompress'] = {'value': end - start, 'unit': 's', 'description': 'Runtime'}

print(json.dumps(data))
