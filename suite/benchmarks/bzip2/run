#!/usr/bin/python3

import time
import subprocess
import os
import json

cmd = ['bzip2', '-c', 'testfile']

data = {}

bzip2 = open('tmp/testfile.bz2', 'w')

start = time.time()
p = subprocess.Popen(cmd, stdout=bzip2)
stdo, stde = p.communicate()
end = time.time()
data['compress'] = {'value': end - start, 'unit': 's', 'description': 'Runtime'}

bzip2.close()

os.chdir('tmp')

cmd = ['bunzip2', 'testfile.bz2']
start = time.time()
p = subprocess.Popen(cmd)
stdo, stde = p.communicate()
end = time.time()
data['decompress'] = {'value': end - start, 'unit': 's', 'description': 'Runtime'}

print(json.dumps(data))

